set encoding=utf-8
call plug#begin('~/.vim/plugged')

" Theme
Plug 'morhetz/gruvbox'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'

" Syntax
Plug 'hdima/python-syntax'

" Productivity
Plug 'airblade/vim-gitgutter'
Plug 'christoomey/vim-tmux-navigator'
Plug 'easymotion/vim-easymotion'
Plug 'gregsexton/MatchTag'
Plug 'jistr/vim-nerdtree-tabs'
Plug 'scrooloose/nerdtree'
Plug 'w0rp/ale'
Plug 'tpope/vim-fugitive'
Plug 'machakann/vim-sandwich'
Plug 'benmills/vimux'
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'
Plug 'kana/vim-arpeggio'

" Misc
Plug 'metakirby5/codi.vim'


call plug#end()

syntax on
set history=100
set autoread

filetype indent on


" Turn of wordwrap by default
set nowrap

" custom key mappings
let mapleader = "\<Space>"
let g:mapleader = "\<Space>"
nnoremap <leader>w :w<CR>

" GTFO
let g:gtfo#terminals = { 'unix': 'urxvt -cd' }

" Sandwich
let g:sandwich_no_default_key_mappings = 1
let g:operator_sandwich_no_default_key_mappings = 1
let g:textobj_sandwich_no_default_key_mappings = 1
map <leader>s <Plug>(operator-sandwich-add)
map <leader>d <Plug>(operator-sandwich-delete)<Plug>(operator-sandwich-release-count)<Plug>(textobj-sandwich-query-a)
map <leader>r <Plug>(operator-sandwich-replace)<Plug>(operator-sandwich-release-count)<Plug>(textobj-sandwich-query-a)


" NERDTree
let g:nerdtree_tabs_focus_on_files = 0
let g:NERDTreeWinPos = "right"
let g:NERDTreeIgnore = ['\.pyc$','\.rpyc$']
map <silent><C-n> <Plug>NERDTreeTabsToggle<CR>

" Trailing whitespace guide
set lcs=eol:¬,tab:»»,trail:∙
set list

" syntastic
let g:syntastic_javascript_checkers = ['jshint']
let g:syntastic_python_checkers = ['flake8']

" Tab management
map <leader>tn :tabnew<CR>

" Easymotion
let g:EasyMotion_do_mapping = 0
let g:EasyMotion_smartcase = 1
nmap s <Plug>(easymotion-s)
map <leader>j <Plug>(easymotion-j)
map <leader>k <Plug>(easymotion-k)

" remove hl navigation
noremap h <NOP>
noremap l <NOP>

noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

" vimux
let g:arpeggio_timeoutlens = { 'v': 40 }
call arpeggio#map('ni', '', 0, 'vp', '<ESC>:VimuxPromptCommand<CR>')
call arpeggio#map('ni', '', 0, 'vl', '<ESC>:VimuxRunLastCommand<CR>')
call arpeggio#map('ni', '', 0, 'vz', '<ESC>:VimuxZoomRunner<CR>')

" FZF
let g:fzf_action = {
      \ 'ctrl-t': 'tab split',
      \ 'ctrl-x': 'split',
      \ 'ctrl-v': 'vsplit' }

let g:fzf_layout = { 'down': '40%' }
let g:fzf_launcher = 'urxvt -geometry 80x30 -e sh -c %s'

nnoremap <silent> <C-p> :Files<CR>
nnoremap <silent> <C-b> :Buffers<CR>
nnoremap <silent> <C-t> :Ag<CR>

" colorscheme
set bg=dark
colorscheme gruvbox

" airline
set laststatus=2
set noshowmode
let g:airline_powerline_fonts=1

" Code guide for more than 80 characters
set colorcolumn=80

" Line numbering
set number

" 1 tab == 2 spaces
" set smarttab
set tabstop=2
set shiftwidth=2

" Use spaces instead of tabs
set expandtab

" set autoindent
" set smartindent

" Disable backup
set nobackup
set nowb
set noswapfile

set hidden

set ignorecase
set smartcase
set hlsearch
set incsearch

set ruler
set magic

set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L
set guioptions-=e

" Clipboard
set clipboard=unnamedplus
