clear lock
clear control

!Change LCtrtl to mode switch
keycode 37 = Mode_switch NoSymbol Mode_switch

!Change capslock to control
keycode 66 = Control_L NoSymbol Control_L

!Swap Escape for tilde useful for vim.
keycode 49 = Escape asciitilde grave asciitilde grave
keycode 9  = grave asciitilde grave asciitilde


keysym h = h H Left NoSymbol NoSymbol NoSymbol
keysym j = j J Down NoSymbol NoSymbol NoSymbol
keysym k = k K Up NoSymbol NoSymbol NoSymbol
keysym l = l L Right NoSymbol lstroke Lstroke
add control = Control_L Control_R
