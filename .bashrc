# For virtual env
venv() {
  local activate=~/.virtualenvs/$1/bin/activate
  if [ -e "$activate" ] ; then
    source "$activate"
  else
    echo "Error: Not found: $activate"
  fi
}

develop() {
  local develop=~/bin/develop
  local dir=~/Development/$1
  if [ -e "$dir" ] ; then
    source $develop $1
  else
    echo "Error: Not found: $dir"
  fi
}

